{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES5",
    "module": "NodeNext",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["./src/**/**/*"],
  "exclude": ["./node_modules"]
}
